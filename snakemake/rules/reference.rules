# Make bowtie2 index
rule make_bowtie2_index:
    input:
        REF
    output:
        IDX
    log:
        expand("logs/bowtie2-build_{id}.log", id = config["refseq"]["id"])
    params:
        cmd  = "bowtie2-build",
        base = re.sub(".fa", "", REF)
    version: "1.0"
    shell:
        """
            {params.cmd} {input} {params.base} > {log}
        """
